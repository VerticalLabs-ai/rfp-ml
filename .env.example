# =============================================================================
# RFP ML Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Primary provider: openai, anthropic, huggingface, or local
LLM_PROVIDER=openai
LLM_MODEL_NAME=gpt-5.1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=3

# Task-specific temperatures (override defaults for specific operations)
BID_GENERATION_TEMP=0.7      # Higher for creative bid writing
EXTRACTION_TEMP=0.3          # Lower for precise requirement extraction
PRICING_TEMP=0.5             # Medium for pricing calculations

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# -----------------------------------------------------------------------------
# Anthropic/Claude Configuration
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Proposal Generation Mode
# Options: template, claude_standard, claude_enhanced, claude_premium
# - template: Fast template-based generation (no API calls)
# - claude_standard: Claude Sonnet without thinking
# - claude_enhanced: Claude Sonnet with thinking (recommended)
# - claude_premium: Claude Opus with thinking (highest quality, most expensive)
PROPOSAL_GENERATION_MODE=claude_enhanced

# Claude Thinking Mode Settings
CLAUDE_ENABLE_THINKING=true
CLAUDE_THINKING_BUDGET=10000

# -----------------------------------------------------------------------------
# HuggingFace Configuration (Fallback)
# -----------------------------------------------------------------------------
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_BASE_URL=https://router.huggingface.co/hf-inference

# -----------------------------------------------------------------------------
# Local Model Configuration (Future Use)
# -----------------------------------------------------------------------------
LOCAL_MODEL_PATH=/path/to/local/model
LOCAL_MODEL_NAME=mistral-7b

# -----------------------------------------------------------------------------
# SAM.gov API Configuration
# Get your API key from: https://api.sam.gov/
# -----------------------------------------------------------------------------
SAM_GOV_API_KEY=your_sam_gov_api_key_here

# SAM.gov Sync Settings
SAM_GOV_SYNC_INTERVAL_MINUTES=15
SAM_GOV_SYNC_DAYS_BACK=7
SAM_GOV_SYNC_LIMIT=100

# -----------------------------------------------------------------------------
# Browserbase Configuration (Cloud Browser Automation)
# -----------------------------------------------------------------------------
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here

# -----------------------------------------------------------------------------
# Email Configuration (SendGrid)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_URL=http://localhost:3300
